<style>
  .ssc-page { min-height: 100vh; background: var(--color-bg); padding: 80px 16px 60px 16px; font-family: var(--font-body); }
  .ssc-inner { max-width: 520px; margin: 0 auto; width: 100%; }
  .ssc-header { text-align: center; margin-bottom: 40px; padding-top: 20px; }
  .ssc-logo { display: flex; align-items: center; justify-content: center; gap: 14px; margin-bottom: 16px; }
  .ssc-logo-icon { width: 48px; height: 48px; }
  .ssc-logo-text { font-family: var(--font-display); font-size: 32px; letter-spacing: -0.02em; color: #F0EEE8; line-height: 1; }
  .ssc-logo-text span { font-style: italic; color: var(--color-primary); }
  .ssc-tagline { font-size: 13px; color: var(--color-text-muted); letter-spacing: 0.1em; text-transform: uppercase; }
  .ssc-card { background: var(--color-card); border: 1px solid var(--color-border); border-radius: var(--radius-lg); position: relative; overflow: hidden; }
  .ssc-card::before { content: ''; position: absolute; top: 0; left: 0; right: 0; height: 2px; background: linear-gradient(90deg, var(--color-primary), var(--color-accent)); }
  .ssc-card-title { font-family: var(--font-display); color: #F0EEE8; font-size: 20px; padding: 24px 24px 16px 24px; }
  .trip-item { display: flex; align-items: center; padding: 16px 24px; border-bottom: 1px solid var(--color-border); }
  .trip-item:last-child { border-bottom: none; }
  .trip-item:hover { background: var(--color-surface); }
  .trip-name { font-size: 15px; font-weight: 500; }
  .trip-arrow { color: var(--color-primary); font-size: 18px; }
  .empty-state { padding: 40px 24px; text-align: center; color: var(--color-text-muted); font-size: 14px; }
  .ssc-new-btn { display: block; width: 100%; padding: 15px; background: var(--color-primary); color: var(--color-text-inverse); border: none; border-radius: var(--radius-md); font-family: var(--font-body); font-size: 15px; font-weight: 700; cursor: pointer; text-align: center; text-decoration: none; margin-top: 16px; }
  .ssc-new-btn:hover { background: var(--color-primary-light); }
</style>

<div class="ssc-page">
  <div class="ssc-inner">

    <div class="ssc-header">
      <div class="ssc-logo">
        <svg class="ssc-logo-icon" viewBox="0 0 72 72" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="10" y="24" width="52" height="38" rx="6" fill="#22263A" stroke="#C9A84C" stroke-width="1.5"/>
          <path d="M26 24V20C26 16.686 28.686 14 32 14H40C43.314 14 46 16.686 46 20V24" stroke="#C9A84C" stroke-width="1.5" stroke-linecap="round"/>
          <line x1="10" y1="43" x2="62" y2="43" stroke="#C9A84C" stroke-width="1"/>
          <circle cx="36" cy="33" r="3.5" fill="#3ECFB2"/>
          <rect x="8" y="38" width="4" height="8" rx="2" fill="#C9A84C"/>
          <rect x="60" y="38" width="4" height="8" rx="2" fill="#C9A84C"/>
        </svg>
        <div class="ssc-logo-text">Smart<span>SuitCase</span></div>
      </div>
      <div class="ssc-tagline">Pack smart. Travel light.</div>
    </div>

    <div class="ssc-card">
      <div class="ssc-card-title">My Trips</div>

      <% if @trips.empty? %>
        <div class="empty-state">No trips yet — create your first one!</div>
      <% else %>
        <% @trips.each do |trip| %>
          <div class="trip-item">
            <%= link_to trip_path(trip), style: "display:flex; align-items:center; justify-content:space-between; flex:1; text-decoration:none; color:#F0EEE8;" do %>
              <span class="trip-name"><%= trip.destination %>, <%= trip.start_date.strftime("%d/%m") %></span>
              <span class="trip-arrow">→</span>
            <% end %>
            <%= button_to trip_path(trip), method: :delete, form: { style: "margin:0;" }, style: "background:none; border:none; cursor:pointer; padding: 0 0 0 16px; color: #E05C5C; font-size: 18px;", data: { turbo_confirm: "Supprimer ce trip ?" } do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>

    <%= link_to "✦ New Trip", new_trip_path, class: "ssc-new-btn" %>

  </div>
</div>
